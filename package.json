{
  "name": "timworkspaces",
  "productName": "Tim Workspaces",
  "version": "1.2.0",
  "description": "Desktop app that aggregates web tools (WhatsApp, Gmail, Teams, Slack, etc.) in one window",
  "author": {
    "name": "Renato Ruis",
    "email": "renatoruis@linux.com",
    "url": "https://github.com/renatoruis"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:dmg-bg": "tiffutil -cathidpicheck build/background.png build/background@2x.png -out build/background.tiff",
    "build:mac": "pnpm run build:dmg-bg && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:mac:sign": "pnpm run build:dmg-bg && electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.timworkspaces.app",
    "productName": "Tim Workspaces",
    "directories": {
      "output": "dist"
    },
    "icon": "src/assets/icone-fundo-escuro.png",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "src/assets/icone-fundo-escuro.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "src/assets/icone-fundo-escuro.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": "x64"
        }
      ],
      "icon": "src/assets/icone-fundo-escuro.png"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 190,
          "type": "file"
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 100,
      "background": "build/background.tiff"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ],
    "patchedDependencies": {
      "dmg-builder@25.1.8": "patches/dmg-builder@25.1.8.patch"
    }
  }
}