{
  "name": "timworkspaces",
  "productName": "Tim Workspaces",
  "version": "1.0.2",
  "description": "Desktop app that aggregates web tools (WhatsApp, Gmail, Teams, Slack, etc.) in one window",
  "author": {
    "name": "Renato Ruis",
    "email": "renatoruis@linux.com",
    "url": "https://github.com/renatoruis"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8",
    "electron": "^37.0.0"
  },
  "build": {
    "appId": "com.timworkspaces.app",
    "productName": "Tim Workspaces",
    "directories": {
      "output": "dist"
    },
    "icon": "src/assets/icone-fundo-escuro.png",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icone-fundo-escuro.png"
    },
    "mac": {
      "target": [
        {"target": "dmg", "arch": ["arm64", "x64"]},
        {"target": "pkg", "arch": ["arm64", "x64"]}
      ],
      "category": "public.app-category.productivity",
      "icon": "src/assets/icone-fundo-escuro.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icone-fundo-escuro.png"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}